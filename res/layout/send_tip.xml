<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/rectangle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout_close"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView
                android:layout_below="@+id/layout_close"
                android:id="@+id/txt_creditbal"
                android:text="You have 81.46 credits"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/layout_add_credit"
                android:orientation="vertical"
                android:layout_below="@+id/txt_creditbal"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <LinearLayout
                    android:id="@+id/layout_addmore"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/img_add"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txt_addmore"
                        android:src="@drawable/add"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                    <TextView
                        android:id="@+id/txt_addmore"
                        android:padding="3dp"
                        android:text="ADD MORE"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
            android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_weight=".3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:layout_weight=".7"
                        android:text="@string/app_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>




        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>